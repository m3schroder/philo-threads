/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	html {
		@apply bg-gray-50;
	}
	strong {
		@apply text-gray-600;
	}
	h1,
	h2,
	h3,
	h4,
	h5 {
		@apply text-gray-500;
	}
	p {
		@apply font-light text-lg leading-9;
	}
}
@layer utilities {
	.break-space {
		@apply mb-5;
	}
	.flex-center {
		@apply flex justify-center items-center;
	}
}

@layer components {
}
